<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/textview_back_of_item"
    android:padding="15dp">


    <TextView
        android:id="@+id/book_headerTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/estre"
        android:gravity="center_horizontal"
        android:paddingLeft="7dp"
        android:text="Forgot Password "
        android:textColor="@color/black"
        android:textSize="25sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/book_headerTV"
        android:layout_marginTop="10dp"
        android:background="@color/gray"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/usernameLay"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/colorPrimary"
        android:gravity="bottom"
        android:textColorHint="@color/colorPrimary"
        app:hintTextAppearance="@style/MyAppearance">
        <EditText
            android:id="@+id/login_emailid"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/edittextshap"
            android:ems="10"
            android:fontFamily="@font/estre"
            android:hint="Enter Username or Email"
            android:inputType="textEmailAddress"
            android:maxLines="2"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16sp" />
    </android.support.design.widget.TextInputLayout>


    <TextView
        android:id="@+id/camera_btn"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/usernameLay"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/estre"
        android:paddingLeft="7dp"
        android:paddingTop="7dp"
        android:text="Cancel"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/gallery_btn"

        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usernameLay"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/camera_btn"
        android:fontFamily="@font/estre"
        android:paddingLeft="7dp"
        android:paddingTop="7dp"
        android:text="Reset"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

</RelativeLayout>
