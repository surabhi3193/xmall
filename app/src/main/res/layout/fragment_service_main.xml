<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/snackbarPosition"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:visibility="gone">

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:id="@+id/scrollLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <include
            layout="@layout/service_item_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scrollLay">

<!--        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:padding="10dp"
            android:scrollbars="none"
            android:visibility="visible" />-->

        <com.baoyz.widget.PullRefreshLayout
            android:id="@+id/refreshLay"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:focusable="true"
            android:scrollbars="none"
            android:paddingTop="10dp"
            android:id="@+id/recyclerViewItem"
            android:splitMotionEvents="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        </com.baoyz.widget.PullRefreshLayout>

        <TextView
            android:id="@+id/noPostTv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center_horizontal"
            android:text="No Posts Available"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/postImageLay"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/loginbackground"
            android:orientation="vertical"
            android:padding="5dp"
            android:visibility="gone">
            <TextView
                android:id="@+id/addimageheader"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="Add Image"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:padding="30dp">
                <TextView
                    android:id="@+id/cameraIV"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/cam_select"
                    android:gravity="center_horizontal|bottom"
                    android:padding="5dp"
                    android:src="@drawable/cam_select"
                    android:text="camera"
                    android:textColor="@color/black"
                    android:textSize="13sp"/>
                <View
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>
                <TextView
                    android:id="@+id/gallerIV"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/gal_select"
                    android:gravity="center_horizontal|bottom"
                    android:padding="5dp"
                    android:src="@drawable/cam_select"
                    android:text="gallery"
                    android:textColor="@color/black"
                    android:textSize="13sp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/gray"/>
            <TextView
                android:id="@+id/cancel_btnIV"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/gray"
                android:textStyle="bold">

            </TextView>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/categorylay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/dark_trans"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white_greyish"
            android:orientation="vertical">
            <TextView
                android:id="@+id/categories_head"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:background="@color/white"
                android:gravity="center"
                android:text="@string/categories"
                android:textColor="@color/black"/>

            <ListView
                android:id="@+id/sub_cat_listview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="5"
                android:background="@color/white"
                android:dividerHeight="1dp">

            </ListView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.9"
                android:background="@color/white"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp">

                <Button
                    android:id="@+id/cancel_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rect_box"
                    android:text="cancel"
                    android:textAllCaps="true"
                    android:textColor="@color/black"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:background="@color/white"/>

                <Button
                    android:id="@+id/confirm_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/DarkBlue"
                    android:text="COnfirm"
                    android:textAllCaps="true"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>


