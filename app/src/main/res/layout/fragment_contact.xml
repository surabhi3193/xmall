<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@drawable/loginbackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/item_shadow_bg">

        <TextView
            android:drawableLeft="@drawable/ic_group_call"
            android:gravity="center"
            android:id="@+id/groupTV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/estre"
            android:paddingLeft="@dimen/size_10"
            android:text="New Group Call"
            android:textColor="@color/DarkBlue"
            android:textSize="16sp"/>

        <TextView
            android:drawableLeft="@drawable/ic_add_friend"
            android:gravity="center"
            android:id="@+id/inviteTV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/estre"
            android:paddingLeft="@dimen/size_10"
            android:text="Invite Friends"
            android:textColor="@color/DarkBlue"
            android:textSize="16sp"/>

    </LinearLayout>

 <android.support.v7.widget.RecyclerView
     android:splitMotionEvents="true"
     android:id="@+id/listview"
     android:layout_width="match_parent"
     android:layout_height="match_parent">

 </android.support.v7.widget.RecyclerView>
</LinearLayout>